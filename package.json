{
  "name": "jspuyo",
  "version": "1.0.0",
  "description": "Puyo Puyo for your browser.",
  "main": "Main.ts",
  "scripts": {
    "autoprefix": "postcss temp.css --use autoprefixer -o public/style.css",
    "autoprefix-watch": "postcss temp.css --use autoprefixer -o public/style.css --watch",
    "bundle": "watchify src/Main.ts -p [tsify -p tsconfig.json] -o public/bundle.js --debug",
    "bundle-limited": "watchify src/webpage/pages.ts -p tsify -o public/limited.js --debug",
    "eslint": "eslint src/ --fix",
    "node": "node-dev --respawn server.js",
    "sass": "sass src/_css/style.scss temp.css --no-source-map",
    "sass-watch": "sass  --watch src/_css/style.scss temp.css --no-source-map",
    "start": "npm-run-all --parallel bundle bundle-limited node sass-watch autoprefix-watch tsc-watch",
    "stylelint": "stylelint \"src/_css/*.scss\" --fix",
    "test": "eslint src/ --fix && stylelint \"src/_css/*.scss\" --fix && mocha 'test/**/*.test.js'",
    "tsc": "tsc -p ./tsconfig.json",
    "tsc-watch": "tsc -p ./tsconfig.json --watch --preserveWatchOutput",
    "uglify": "browserify -p tsify -t uglifyify src/Main.ts > public/bundle.js",
    "uglify-limited": "browserify -p tsify -t uglifyify src/webpage/pages.ts > public/limited.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WillFlame14/jspuyo.git"
  },
  "author": "WillFlame, InaneQuark",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WillFlame14/jspuyo/issues"
  },
  "homepage": "https://github.com/WillFlame14/jspuyo#readme",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/socket.io-client": "^1.4.34",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "express": "^4.17.1",
    "firebase": "^7.24.0",
    "firebaseui": "^4.6.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/chartist": "^0.11.0",
    "@types/socket.io": "^2.1.11",
    "autoprefixer": "^9.8.6",
    "browserify": "^16.5.2",
    "chai": "^4.2.0",
    "chai-exclude": "^2.0.2",
    "cypress": "^5.1.0",
    "deep-equal-in-any-order": "^1.0.28",
    "eslint": "^7.9.0",
    "eslint-plugin-cypress": "^2.11.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "mocha": "^8.1.3",
    "node-dev": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.2",
    "sass": "^1.26.10",
    "stylelint": "^13.7.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-order": "^4.1.0",
    "tsify": "^5.0.2",
    "typescript": "^4.0.3",
    "uglifyify": "^5.0.2",
    "wait-on": "^5.2.0",
    "watchify": "^3.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
